/* components/container/index.wxss */
.theme-text-color {
  color: var(--text-danger-color--);
}

.signin-container {
  /* 页面背景和颜色 */
  --layout-bg--: #fff;
  --text-danger-color--: #EF4028;
  --text-second-color--: #fff;
  --text-weak-color--: #666;
  --text-label-color--: #999;
  --text-normal-color--: #000;
  --text-tit-color--: #333;
  /* 签到模块色值 */
  --signin-bright-color--: #FFCC00;
  --signin-gray-color--: #E9E9E9;
  --signin-strong-color--: #f1f1f1;
  /* 消息提醒模块 */
  --notify-color-text--: #FF6600;
  --notify-color-bg--: #FFF8DB;
  /* 抽奖模块 */
  --lottery-start-bg--: #FFC85E;
  --lottery-selectd-bg--: #FFF740;
  --lottery-start-text-color--: #FF0000;
  /* 签到按钮 */
  --is-sign--: #E9E9E9;
  --not-sign--: #FFC85E;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  background-color: var(--layout-bg--);

}

.signin-container {
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  background-color: var(--layout-bg--);

}

.signin-hd-tit {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
}


.signin-hd__record {
  flex: 1 1 auto;
  min-width: 20px;
  color: var(--text-tit-color--);
  font-size: 28rpx;
  font-weight: 700;
  line-height: 40rpx;
}



.signin-hd-tit .rule {
  font-size: 24rpx;
  font-weight: 500;
  display: inline-block;
  vertical-align: middle;
  line-height: 32rpx;
  margin-left: 20rpx;
  color: var(--text-label-color--);
}

.signin-desc {
  display: flex;
  flex-direction: row;
  margin-top: 16rpx;
}

.remind-text {
  line-height: 36rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-tit-color--);
}

.signin-btn {
  margin-top: 40rpx;
  width: 100%;
}

.signin-is-btn {
  background-color: var(--is-sign--);
  color: #fff;
}

.signin--not-btn {
  background-color: var(--not-sign--);
  color: #fff;
}