/* components/signIn/step.wxss */
/*  签到步骤  start*/
.signUp-clock {
  margin-top: 24rpx;
  width: 100%;
  overflow: hidden;
}


.signUp-clock-box {
  overflow-y: scroll;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  position: relative;
}

.step-item {
  padding: 68rpx 0 0;
  width: 90rpx;
  position: relative;
  flex-shrink: 0;
  flex-grow: 0;
}

.step-item::before {
  content: '';
  position: absolute;
  width: 100%;
  height: 2rpx;
  background: var(--signUp-bright-color--);
  bottom: 48rpx;
  left: 0;
}

.step-item:first-child {
  padding-left: 40rpx;
}

.step-item:last-child {
  padding-right: 40rpx;
}

.signUp-clock-box .icon-day {
  width: 36rpx;
  height: 36rpx;
  display: block;
  margin: 0 auto 12rpx;
}

.signUp-clock-box .icon-day .signUp-step-icon {
  width: 100%;
  height: 100%;
  display: inline-block;
}


.signUp-clock .dot-line {
  width: 10rpx;
  height: 10rpx;
  background: var(--signUp-bright-color--);
  border-radius: 50%;
  position: relative;
  margin: 8rpx auto 0;
}

.signUp-clock .step-days {
  font-size: 24rpx;
  line-height: 36rpx;
  height: 36rpx;
  font-weight: 500;
  margin-top: 8rpx;
  width: 100%;
  text-align: center;
  color: var(--text-weak-color--);
}



.signUp-clock .step-item-regbag {
  position: absolute;
  top: 0;
  width: 90rpx;
}


.step-item-extra {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.step-item:first-child .step-item-extra {
  padding-left: 40rpx;
}

.step-item:last-child .step-item-extra {
  padding-right: 40rpx;
}

.step-item-extra .redbag-text {
  line-height: 36rpx;
  color: var(--text-normal-color--);
  font-size: 22rpx;
  font-weight: 500;
  max-width: 166rpx;
  min-width: 90rpx;
  display: inline-block;
  text-align: center;
  background-color: #FDF6A4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 6rpx;
  box-sizing: border-box;
}

.step-item-arrow {
  position: absolute;
  top: 38rpx;
  width: 90rpx;
  height: 20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.step-item-arrow .red-arrow {
  width: 18rpx;
  height: 16rpx;
  margin: 0 auto;
  background-image: url(https://scene-module-9gee6idgabd997ca-1306328562.tcloudbaseapp.com/signIn/images/redbag-arrow.svg);
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.step-item:first-child .step-item-arrow {
  padding-left: 40rpx;
}

.step-item:last-child .step-item-arrow {
  padding-right: 40rpx;
}

.step-item.is-current~.step-item::before {
  background-color: var(--signUp-gray-color--);
  width: 100%;
}

.step-item.is-current::after {
  content: '';
  position: absolute;
  width: 40rpx;
  height: 2rpx;
  bottom: 48rpx;
  right: 0;
  background-color: var(--signUp-gray-color--);
  z-index: 3;
}

.step-item.is-current~.step-item .dot-line {
  background: var(--signUp-gray-color--);
}


.step-item.is-current~.step-item .redbag-text {
  background-color: var(--signUp-strong-color--);
}


.signUp-clock.zero-num .step-item .dot-line {
  background: var(--signUp-gray-color--);
}

.signUp-clock.zero-num .step-item .redbag-text {
  background-color: var(--signUp-strong-color--);
}

.signUp-clock.zero-num .step-item::before {
  background-color: var(--signUp-gray-color--);
}

/*  签到步骤  end */

@media screen and (max-width: 500px) {
  .step-item::before {
    bottom: 46rpx;
  }

  .step-item.is-current::after {
    bottom: 46rpx;
  }
}

@media screen and (max-width: 400px) {
  .step-item::before {
    bottom: 48rpx;
  }

  .step-item.is-current::after {
    bottom: 48rpx;
  }
}